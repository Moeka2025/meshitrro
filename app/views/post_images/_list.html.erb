<% post_images.each do |post_image| %>
  <div>
  <%= link_to post_image_path(post_image.id) do %>
    <%= image_tag post_image.get_image, size: "100x100" %>
  <% end %>
  <p>投稿ユーザー画像:<%= image_tag 'sample-author1.jpg' %></p>
  <p>ショップ名:<%= post_image.shop_name %></p>
  <p>説明:<%= post_image.caption %></p>
  <p>ユーザーネーム:<%= post_image.user.name %></p>
  <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
  <% if post_image.user == current_user %>
    <p><%= link_to "削除", post_image_path(post_image), method: :delete, data: { confirm: "本当に削除しますか？" } %></p>
  <% end %>
  </div>
<% end %>
<%= paginate post_images %>